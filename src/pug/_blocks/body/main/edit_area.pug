// edit_area
article.edit_area
  section.comment_form
    form#comment_form(action="./", method="post", name="comment_form")
      input(type="hidden", name="mode", value="edit")
      input(type="hidden", name="mode2" value="edited")
      input(type="hidden", name="edit[rno]", value!="<%eno>")
      dl
        dt
          label(for="name") Name
        dd
          input.name(type="text", name="edit[name]", value!="<%edit_name>")
        dt
          label(for="mail") Mail
        dd
          input.mail(type="text", name="edit[mail]", value!="<%edit_mail>")
        dt
          label(for="url") URL
        dd
          input.url(type="text", name="edit[url]", value!="<%edit_url>")
        dt
          label(for="comment") Comment
        dd
          textarea.comment(name="edit[body]") <%edit_body>
        dt
          label(for="pass") Password (required)
        dd
          input.password(type="password", name="edit[pass]")
        dt
          label(for="private") Private
        dd
          input.private(type="checkbox", name="edit[himitu]")
      input.edit(type="submit", value="Edit")
      input.delete(type="submit", name="edit[delete]", value="Delete")
// /edit_area
