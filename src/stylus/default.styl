recentEntryListLogo(bgColor, borderColor, logoUrl)
  h1:before
    content ""
    display inline-block
    background url(logoUrl) no-repeat scroll center bgColor
    width  .9em
    height .9em
    border-radius 5px
    border 0.12em solid borderColor
    vertical-align -.2em
    margin  0 .2em 0 0
    padding 0
@import "_lib/reset.styl"
.clearfix
  min-height 0px

//- http://ironodata.info/rgb.php?color=3B3B3B
blankColor    =  #b3b3b3
subColor       = #e6e6e6
accentColorBlue = #30d0cf
accentColorRed = #f05030

mainColor       = #ffffff
fontMainColor  = #3b3b3b
mainColorR        = #3b3b3b
fontMainColorR   = #fff

fontFamily = "メイリオ","Meiryo",Verdana,"ヒラギノ角ゴ Pro W3","Hiragino Kaku Gothic Pro","Osaka",sans-serif
contentWidth = 1040px
mainWidth = 960px
widgetWidth = 460px
fontSizeWidgetHeader = 1.5em

.color_font_main
  color fontMainColor !important

q, blockquote
  font-family "MS Gothic", "Osaka"
  font-style  italic

body
  background-color blankColor
  color            fontMainColor
  font-family fontFamily
  font-size   10px
  a
    color fontMainColor
    text-decoration none
  #container
    width            contentWidth
    margin           0 auto
    h1.not_index_area, h1.index_area
      a
        color fontMainColorR
      margin 0 auto
      text-align center
      background-color mainColorR
    h1.not_index_area
      padding 1em 0
      font-size 2.2em
    h1.index_area
      padding 2em 0
      font-size 3em
    article
      overflow hidden
      a
        color accentColorBlue
      a:hover
        color accentColorRed
    //- container footer
    footer
      padding 1em ((contentWidth+(-1 * mainWidth))/2)
      background-color mainColorR
      color            fontMainColorR
      a
        color            fontMainColorR
      .copyright
        margin 0 0 1em 0
        a
          color accentColorBlue
        a:hover
          color accentColorRed
    .widget
      width widgetWidth
      margin 2em
      h1
        background-color mainColor
        text-align left
        font-size fontSizeWidgetHeader
      footer
        padding 0
            
    //- 記事中で用いるもの
    .activity_list
      fontSizeH1=2.2em
      font-size 1.3em
      background-color mainColor
      footer
        background-color mainColor
        pdding 0
      hr
        border 0
      .link_list
        float left
        recentEntryListLogo(mainColor, blankColor, "")
        .table
          .row
            padding .2em .3em .2em fontSizeH1
      #tumblrfeed
        recentEntryListLogo(accentColorBlue, accentColorBlue, "http://blog-imgs-78.fc2.com/p/s/o/pso2tasy/tumblr_logo_white_24.png")
      .recent_entry_list
        float left
        recentEntryListLogo(accentColorRed, accentColorRed, "")
        //- recentEntryListLogo(accentColorRed, "http://blog-imgs-53.fc2.com/p/s/o/pso2tasy/twittericon00.jpg")
        .table
          .row
            margin .5em 0
            padding-left fontSizeH1
            .thumbnail
              float left
              overflow hidden
              height 72px
              width  72px
              background-color subColor
              border-radius 10px
              img
                min-height 72px
                min-width  72px
                max-height 72px
                max-width  72px
            .text
              width 300px
              padding-left 1em
              float left
              vertical-align bottom
              .title
                width @width
                overflow hidden
                font-size 1.2em
                white-space nowrap
                text-overflow  ellipsis
      .recent_comment_list
        float left
        recentEntryListLogo(mainColor, blankColor, "")
        table
          tr
            td
              padding .2em .3em
            td:first-child
              padding-left fontSizeH1
    .entry
      background-color blankColor
      header
        background-color mainColor
        padding 1em 0 1em 1em
        margin  0 0 0em 0
        text-align left
        h1
          font-size 2.2em
          border-bottom 1px solid blankColor
          margin 0
          line-height 1.3
          a
            color fontMainColor
        .meta
          .date, .comments_count, .category
            border-right 1px solid blankColor
          .date, .comments_count, .category, .tags
            padding 0 0.7em
          .tags
            .tag
              padding 0 0 0 0.5em
      .content
        margin 0 auto
        font-size 1.3em
        .text
          padding 3em ((contentWidth+(-1 * mainWidth))/2) 1em ((contentWidth+(-1 * mainWidth))/2)
          background-color mainColor
          margin-bottom 1em
          p
            margin-bottom 2em
            line-height 1.6
          p.obj
            background-color mainColorR
            color fontMainColorR
            padding-bottom .5em
            margin-bottom 1em
            img
              max-width  mainWidth
              max-height mainWidth
          div.obj
            background-color mainColorR
            color fontMainColorR
            padding-bottom .5em
            margin-bottom 1em
            width auto
            img
              max-width  mainWidth
              max-height mainWidth
            p
              padding 0 0 0 1em
              margin 0
          img.ss
            max-width  mainWidth
            max-height mainWidth
          img.ss_v
            max-width  mainWidth
            max-height mainWidth
          .iris
            color #330066
          .lily
            color #006600
          .speaker
            text-align right
            display    inline-block
            width      6em
      //-  .text:after
      //-    margin .5em 0 0 0
      //-    content ""
      //-    height 1px
      //-    display block
      //-    width 100%
      //-    background-image linear-gradient(to right, rgba(0,0,0,0), rgba(0,0,0,0.75), rgba(0,0,0,0))
      //- fotter
      //-   nav
      .comment
        background-color mainColor
        color fontMainColor
        padding 1em ((contentWidth+(-1 * mainWidth))/2)
        .body
          font-size 1.3em
          line-height 1.6
        .body:after
          margin .5em 0 0 0
          content ""
          height 1px
          display block
          width 100%
          background-image linear-gradient(to right, rgba(0,0,0,0.75), rgba(0,0,0,0), rgba(0,0,0,0))
        footer
          color fontMainColor
          text-align left
          padding 0
          margin-bottom 2em
      .comment_form
        background-color mainColor
        padding 1em ((contentWidth+(-1 * mainWidth))/2)
        font-size 1.3em
      footer
        background-color mainColor
        color            fontMainColor
        padding 1em ((contentWidth+(-1 * mainWidth))/2) 3em ((contentWidth+(-1 * mainWidth))/2)
        text-align center
        a
          color accentColorBlue
        nav
          font-size 1.3em
          text-align center
          line-height 1
          .next_entry_link
            float left
          .prev_entry_link
            float right
          hr
            border 0
    //- container aside
    aside
      padding 2em ((contentWidth+(-1 * mainWidth))/2) 1em ((contentWidth+(-1 * mainWidth))/2)
      background-color subColor
      .widget_area
        .widget
          width (widgetWidth/2)
          h1
            background-color subColor
        a
          color accentColorBlue
        hr
          border 0
          //- height: 1px;
          //- width 100%
          //- background-image linear-gradient(to right, rgba(0,0,0,0), rgba(0,0,0,0.75), rgba(0,0,0,0))
        .widget
          margin 0
        .link_list, .category_list, .archive
          float left
          .table
            .row
              margin .5em 0
              padding-left 1em
        .profile
          float left
          .table
            .row
              margin .5em 0
              padding-left 1em
    #comment_form
      .name
        width 10em
      .mail
        width 20em
      .url
        width 20em
      .comment
        padding 0.5em
        width  40em
        height 10em
      .edit
        width 8em
        margin 0 2em 0 0
        background-color accentColorBlue
      .delete
        width 6em
        margin 0 1em
        background-color accentColorRed
    // edit_area 用
    .edit_area
      background-color mainColor
      font-size 1.3em
      padding 1em ((contentWidth+(-1 * mainWidth))/2)
    // date_area, category_area, search_area, tag_area など、リスト表示エリアのスタイル
    .entry_list
      font-size 1.3em
      background-color mainColor
      padding 1em ((contentWidth+(-1 * mainWidth))/2)
      width mainWidth
      footer
        background-color mainColor
      .table
        .row
          margin .5em 0
          .thumbnail
            background-color subColor
            border-radius 5px
            overflow hidden
            margin-left 1em
            float left
            width  300px
            height 200px
          .text
            line-height 1.6
            padding-left 1em
            float left
            vertical-align bottom
            .title
              font-size 1.2em
