recentEntryListLogo(bgColor, borderColor, logoUrl)
  h1:before
    content ""
    display inline-block
    background url(logoUrl) no-repeat scroll center bgColor
    width  .9em
    height .9em
    border-radius 4px
    vertical-align -.2em
    margin  0 .2em 0 0
    padding 0
    if(logoUrl == "")
      border 0.12em solid borderColor
    else
      border 0.2em solid borderColor
@import "_lib/reset.styl"
.clearfix
  min-height 0px

//- ベース配色
//- http://ironodata.info/rgb.php?color=3B3B3B
mainColor       = #ffffff
fontMainColor   = #3b3b3b //- rgb595959
mainColorR      = #3b3b3b
fontMainColorR  = #fff
mainColorDark   = #f6f6f6
//- blankColor      = #b3b3b3 //- rgb179179179
blankColor      = #494949 //- rgb179179179
subColor        = #e6e6e6
footerBGColor   = #1a1a1a


//- アクセント配色
//- http://ironodata.info/rgb.php?color=30D0CF
//- blue-red, blue-brown が基本
accentColorBlue  = #30d0cf
accentColorRed   = #d13081
accentColorBrown = #d18130
paleAccentColorBlue  = rgba(48,208,207,.5)
paleAccentColorRed   = rgba(209,48,129,.5)
paleAccentColorBrown = rgba(209,129,48,.5)

fontFamily = "メイリオ","Meiryo",Verdana,"ヒラギノ角ゴ Pro W3","Hiragino Kaku Gothic Pro","Osaka",sans-serif
fontFamilyQuote = "MS Gothic", "Osaka"
contentWidth = 1040px
mainWidth = 960px
widgetWidth = 460px

.color_font_main
  color fontMainColor !important
.blue
  color accentColorBlue
.red
  color accentColorRed
.brown
  color accentColorBrown

q, blockquote
  font-family fontFamilyQuote
  font-style  italic
blockquote
  p
    font-family fontFamilyQuote
    font-style  italic
    margin:0
    padding 0.2em
  .origin // 引用もとのリンクに設定 p.origin a
    font-family fontFamily
    margin  0
    padding 0.2em
    text-align right

s
  color subColor

body
  background-color blankColor
  color            fontMainColor
  font-family fontFamily
  font-size   10px
  a
    color fontMainColor
    text-decoration none
  #container
    width            contentWidth
    margin           0 auto
    h1.not_index_area, h1.index_area
      a
        color fontMainColorR
      a:hover
        color accentColorBlue
      margin 0 auto
      text-align center
      background-color mainColorR
    h1.not_index_area
      padding 1em 0
      font-size 220%
    h1.index_area
      padding 2em 0
      font-size 300%
    article
      overflow hidden
      a
        color accentColorBlue
      a:hover
        color accentColorRed
    //- container footer
    >footer
      padding 1em ((contentWidth+(-1 * mainWidth))/2)
      background-color footerBGColor
      color            blankColor
      a
        color          blankColor
      .copyright
        margin 0 0 1em 0
        a
          color accentColorBlue
        a:hover
          color accentColorRed
    .widget
      width widgetWidth
      margin 2em
      h1
        background-color mainColor
        text-align left
        font-size 150%
      footer
        padding 0
            
    //- 記事中で用いるもの
    .activity_list
      font-size 130%
      background-color mainColor
      .widget
        a
          color fontMainColor
          display block
          border-radius 4px
        a:hover
          color accentColorBlue
      footer
        background-color mainColor
        pdding 0
      hr
        border 1px solid mainColorR
      .link_list
        float left
        recentEntryListLogo(mainColor, accentColorBrown, "")
        a:hover
          color accentColorBrown
        .table
          .row
            .text
              padding .2em .3em .2em 2em
      #tumblrfeed
        recentEntryListLogo(accentColorRed, accentColorRed, "http://blog-imgs-78.fc2.com/p/s/o/pso2tasy/tumblr_logo_white_24.png")
        a:hover
          color accentColorRed
      .recent_entry_list
        float left
        recentEntryListLogo(accentColorBlue, accentColorBlue, "")
        .table
          .row
            padding .5em 0 .5em 2.2em
            .thumbnail
              float left
              overflow hidden
              height 72px
              width  72px
              background-color subColor
              border-radius 10px
              img
                min-height 72px
                min-width  72px
                max-height 72px
                max-width  72px
            .text
              width 300px
              padding-left 1em
              float left
              vertical-align bottom
              .title
                width @width
                overflow hidden
                font-size 120%
                white-space nowrap
                text-overflow  ellipsis
      .recent_comment_list
        float left
        recentEntryListLogo(mainColor, accentColorBlue, "")
        .table
          .row
            .text
              padding .2em .3em .5em 2em
              .title
                padding-left 1.5em

    .entry
      background-color blankColor
      header
        background-color mainColor
        padding 1em 1em 1em 1em
        margin  0 0 0em 0
        text-align left
        h1
          font-size 220%
          border-bottom 1px solid blankColor
          margin 0
          line-height 1.3
          a
            color fontMainColor
        .meta
          .date, .comments_count, .category
            border-right 1px solid blankColor
          .date, .comments_count, .category, .tags
            padding 0 0.7em
          .date
            padding-left 0
          .tags
            .tag
              padding 0 0 0 0.5em
      .content
        margin 0 auto
        font-size 130%
        .text
          padding 3em ((contentWidth+(-1 * mainWidth))/2) 1em ((contentWidth+(-1 * mainWidth))/2)
          background-color mainColor
          margin-bottom 1em
          p
            margin-bottom 2em
            line-height 1.6
          div.obj
            margin-bottom 1em
            width auto
            img
              max-width  mainWidth
              max-height mainWidth
              vertical-align bottom
            p
              background-color mainColorR
              color fontMainColorR
              padding 0.2em 0 0.5em 1em
              margin 0
            p.chat
              background-color mainColor
              color fontMainColor
          img.ss
            max-width  mainWidth
            max-height mainWidth
            vertical-align bottom
          img.ss_v
            max-width  mainWidth
            max-height mainWidth
            vertical-align bottom
          .iris
            color #330066
          .lily
            color #006600
          .speaker
            text-align right
            display    inline-block
            width      6em
          .speaker_3em
            text-align right
            display    inline-block
            width      3em
          .speaker_4em
            text-align right
            display    inline-block
            width      4em
          .speaker_5em
            text-align right
            display    inline-block
            width      5em
          table
            border 1px solid mainColorR
            tr, th, td
              border 1px solid mainColorR
            th, td
              padding 0.3em 0.5em
            th
              background-color mainColorDark
          .notes 
            color subColor
      .comment_list
        background-color mainColor
        color fontMainColor
        .comment
          padding 1em ((contentWidth+(-1 * mainWidth))/2)
          .body
            font-size 130%
            line-height 1.6
          .body:after
            margin .5em 0 0 0
            content ""
            height 1px
            display block
            width 100%
            background-image linear-gradient(to right, rgba(0,0,0,0.75), rgba(0,0,0,0), rgba(0,0,0,0))
          footer
            color fontMainColor
            text-align left
            padding 0 0 1em 0
        .comment:nth-child(2n)
          background-color mainColorDark
      .comment_form
        background-color mainColor
        padding 1em ((contentWidth+(-1 * mainWidth))/2)
        font-size 130%
      >footer
        background-color mainColor
        color            fontMainColor
        padding 1em ((contentWidth+(-1 * mainWidth))/2) 3em ((contentWidth+(-1 * mainWidth))/2)
        text-align center
        a
          color accentColorBlue
        a:hover
          color accentColorRed
        nav
          font-size 130%
          text-align center
          line-height 1
          .older_entry_link, .newer_entry_link
            overflow hidden
            white-space nowrap
            text-overflow ellipsis
          .older_entry_link
            float left
            text-align left
            width (mainWidth/2)
          .newer_entry_link
            float right
            text-align right
            width (mainWidth/2)
          hr
            border 0
    //- container aside
    aside
      padding 2em ((contentWidth+(-1 * mainWidth))/2) 1em ((contentWidth+(-1 * mainWidth))/2)
      background-color mainColorR
      color fontMainColorR
      font-size 110%
      .widget_area
        .widget
          width (widgetWidth/2)
          margin 0 .9em 0 0
          h1
            background-color mainColorR
            color  fontMainColorR
        a
          color subColor
        a:hover
          color accentColorBlue
        hr
          border 0
        .link_list, .category_list, .archive
          float left
          .table
            .row
              height 1.5em
              margin .5em 0
              .text
                overflow hidden
                white-space nowrap
                text-overflow ellipsis
                padding-left 1em
        .link_list
          .table
            .row
              .text:hover
                overflow visible
        .bloginfo
          float left
          .row
             padding-left 1em
          .info
            .table
              .row
                margin .5em 0
                .description
                  padding-left 1em
              .search_form
                input
                  border 0
                  background-color mainColorR
                .search_submit
                  color fontMainColorR
                  padding 0 0 0 .5em
                  margin-left 1em
                  font-size 115%
                .search_submit:hover
                  color accentColorBlue
                  cursor pointer
                .search_word
                  border-bottom fontMainColorR solid 1px
                  padding 0
                  width 10em
                .search_word:focus
                  background-color mainColor
    #comment_form
      input, textarea 
        border mainColorR solid 1px
      .name
        width 10em
      .mail
        width 20em
      .url
        width 20em
      .comment
        padding 0.5em
        width  40em
        height 10em
      .edit
        width 8em
        margin 0 2em 0 0
        background-color accentColorBlue
      .delete
        width 6em
        margin 0 1em
        background-color accentColorRed
    // edit_area 用
    .edit_area
      background-color mainColor
      font-size 130%
      padding 1em ((contentWidth+(-1 * mainWidth))/2)
    // date_area, category_area, search_area, tag_area など、リスト表示エリアのスタイル
    .entry_list
      font-size 130%
      background-color mainColor
      padding 1em ((contentWidth+(-1 * mainWidth))/2)
      width mainWidth
      footer
        background-color mainColor
        nav
          padding 1em
          text-align center
          line-height 1
          .previous_page_link, .next_page_link
            overflow hidden
            white-space nowrap
            text-overflow  ellipsis
          .previous_page_link
            float left
          .next_page_link
            float right
          hr
            border 0
      .table
        .row
          margin .5em 0
          .thumbnail
            background-color subColor
            border-radius 5px
            overflow hidden
            margin-left 1em
            float left
            width  300px
            height 200px
          .text
            width 600px
            overflow hidden
            line-height 1.6
            padding-left 1em
            float left
            vertical-align bottom
            .title
              font-size 120%
